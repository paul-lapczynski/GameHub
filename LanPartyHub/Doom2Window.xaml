<Window x:Class="LanPartyHub.Doom2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanPartyHub"
        mc:Ignorable="d"
        Title="Doom2Window" Height="450" Width="800">
    <Grid Unloaded="Unload">
        <ComboBox x:Name="EpisodeDropdown" HorizontalAlignment="Center" VerticalAlignment="Top" Width="188" SelectionChanged="EpisodeDropdown_SelectionChanged" Margin="305,128,299,0"/>
        <ComboBox x:Name="LevelDropdown" HorizontalAlignment="Left" Margin="305,190,0,0" VerticalAlignment="Top" Width="188"/>
        <ComboBox HorizontalAlignment="Left" Margin="305,252,0,0" VerticalAlignment="Top" Width="109"/>
        <Label Content="Episode" HorizontalAlignment="Left" Margin="305,93,0,0" VerticalAlignment="Top" Height="30" Width="80"/>
        <Label Content="Level" HorizontalAlignment="Left" Margin="305,155,0,0" VerticalAlignment="Top" Height="30" Width="80"/>
        <Label Content="Players" HorizontalAlignment="Left" Margin="305,217,0,0" VerticalAlignment="Top" Height="30" Width="80"/>
        <Button x:Name="StartDoomButton" Content="Start Doom" HorizontalAlignment="Left" Margin="655,375,0,0" VerticalAlignment="Top" Width="127" Height="34" Click="StartDoom"/>
    </Grid>
</Window>
