<Window x:Class="LanPartyHub.StdGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LanPartyHub"
        mc:Ignorable="d"
        Title="GameWindow" Height="260" Width="325"
        WindowStartupLocation="CenterOwner">
    <Grid Unloaded="Unload" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF727272" Offset="0"/>
                <GradientStop Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}" Offset="0.84"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Name="StartGameButton" HorizontalAlignment="Center" VerticalAlignment="Center"  Click="StartStdGame" >
            <TextBlock Name="StartGameText" TextWrapping="Wrap" TextAlignment="Center" MinWidth="125" MaxWidth="125" Padding="5,5,5,5"/>
        </Button>
    </Grid>
</Window>
